<Page
    x:Class="UlmUniversityNews.Views.ModeratorViews.ChannelDetails.ModeratorChannelDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UlmUniversityNews.Views.ModeratorViews.ChannelDetails"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"	
	xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:common="using:UlmUniversityNews.Common"
	xmlns:valueconverter="using:UlmUniversityNews.Converters"
	xmlns:drawerLayout="using:DrawerLayout"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Konvertierung eines ItemClickEventArgs auf das geklickte Objekt. -->
        <valueconverter:ItemClickedConverter x:Key="ItemClickedConverter" />
        <!-- Konvertierung eines ChannelType Enum-Wert auf einen String, abhängig von der Sprache. -->
        <valueconverter:ChannelTypeToStringConverter x:Key="ChannelTypeToStringConverterLocal" />
        <!-- Konvertierung eines Null-Wert auf einen Sichtbarkeitswert. -->
        <valueconverter:NullValuetoVisibilityConverter x:Key="NullValuetoVisibilityConverter" />
        <!-- Konvertierung der Anzahl von Elementen einer Liste auf eine Sichtbarkeit. -->
        <valueconverter:ListCountToVisibilityConverter x:Key="ListCountToVisibilityConverter" />
        <!-- Konvertierung eines Boolean-Wertes auf eine Sichtbarkeit. -->
        <valueconverter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- Konvertierung eines Fakultäts-Enum-Wert auf einen String, abhängig von der Sprache. -->
        <valueconverter:FacultyToLocalizedStringConverter x:Key="FacultyToLocalizedStringConverter" />
        <!-- Konvertierung einer MessageRead Eigenschaft auf eine Farbe. -->
        <valueconverter:MessageReadPropertyToBackgroundColorConverter x:Key="MessageReadPropertyToBackgroundColorConverter" />
        <!-- Bilde Kanaleigenschaft auf Hintergrundfarbe ab. Für Drawer Menü -->
        <valueconverter:ChannelToDrawerMenuBackgroundConverter x:Key="ChannelToDrawerMenuBackgroundConverter" />

        <!-- Datumsstring Konverter für Reminder. -->
        <valueconverter:ReminderDateTimeToStringConverter x:Key="ReminderDateTimeToStringConverter" />
        
        <!-- Data Template eines Eintrags einer Announcement-Ressource in der Detailansicht eines Kanals. -->
        <DataTemplate
            x:Key="AnnouncementListItemStyle">
            <Grid RenderTransformOrigin="0.5, 0.5">
                <Grid.RenderTransform>
                    <RotateTransform  Angle="{Binding ElementName=AnnouncementList, Path=DataContext.ListRotationAngle}"/>
                    <!-- Problem: Binding auf Property, die nicht in ItemSource definiert ist. Workaround hier: Binde auf DataContext des Listenelements. In diesem Fall ist das das ViewModel selbst. -->
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- 1. Zeile: Announcement-->
                    <RowDefinition Height="Auto" />
                    <!-- 2.Zeile:  Seperator-->
                </Grid.RowDefinitions>

                <Grid
                    Background="{StaticResource MainFragmentBackgroundColor}"
                    Height="Auto"       
                    Margin="0,5,19,5">         <!-- Background="{Binding Read, Converter={StaticResource MessageReadPropertyToBackgroundColorConverter}} -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- 1.Zeile für Announcement Titel und Datum -->
                        <RowDefinition Height="Auto" />
                        <!-- 2.Zeile für Inhalt der Nachricht -->
                    </Grid.RowDefinitions>

                    <!-- 1. Zeile -->
                    <!-- Grid für Announcement Titel und Datum.-->
                    <Grid
                    Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <!-- Spalte für Titel -->
                            <ColumnDefinition Width="*" />
                            <!-- Spalte für Datum -->
                        </Grid.ColumnDefinitions>

                        <!-- Titel -->
                        <TextBlock
                        Grid.Column="0"
                        x:Name="AnnouncementTitle"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        TextAlignment="Left"
                        Style="{StaticResource HeaderTextInAnnouncementList}"
                        Text="{Binding Title}" />

                        <!-- Datum -->
                        <TextBlock
                        Grid.Column="1"
                        x:Name="AnnouncementCreationDate"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        TextAlignment="Right"
                        Style="{StaticResource DateTimeFieldinList}"
                        Text="{Binding CreationDate, Converter={StaticResource DateTimeToStringConverter}}"/>

                    </Grid>

                    <!-- 2.Zeile -->
                    <!-- Nachrichteninhalt -->
                    <TextBlock
                    Grid.Row="1"
                    x:Name="AnnouncementContent"
                    Style="{StaticResource TextInAnnouncementList}"
                    Text="{Binding Text}" />
                </Grid>

                <!-- 3. Zeile Sepeartor-->
                <Line 
                    Grid.Row="1"
                    Margin="-5, 5, 19, 5"
                    Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
            </Grid>
        </DataTemplate>
        
        <!-- Data Template für die Anzeige von Reminder-Einträgen in Liste. -->
        <DataTemplate
            x:Name="ReminderListItemStyle">
            <Grid 
                Background="{StaticResource MainFragmentBackgroundColor}"
                Margin="0,5,19,5">
                <Grid.RowDefinitions>
                    <!-- Reminder Zeile -->
                    <RowDefinition Height="Auto" />
                    <!-- 2.Zeile:  Seperator-->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Unterteilung der Anzeige in 3 Teile: Title, Content, und Next Reminder Date -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <!-- Title -->
                        <RowDefinition Height="Auto" />
                        <!-- Text (Nachrichteninhalt) -->
                        <RowDefinition Height="Auto" />
                        <!-- Nächster Reminder Termin -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Titel -->
                    <TextBlock
                        Grid.Row="0"
                        x:Name="ReminderTitle"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        TextAlignment="Left"
                        Style="{StaticResource HeaderTextInAnnouncementList}"
                        Text="{Binding Title}" />
                    
                    <!-- Text -->
                    <TextBlock
                        Grid.Row="1"
                        x:Name="ReminderText"
                        Style="{StaticResource TextInAnnouncementList}"
                        Text="{Binding Text}"
                        />
                    
                    <!-- Nächster Reminder Termin -->
                    <Grid
                        Margin="0, 5, 0, 0"
                        Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock
                            Grid.Column="0"
                            x:Name="NextReminderDateDescription"
                            x:Uid="NextReminderDateDescription"
                            TextWrapping="WrapWholeWords"
                            Style="{StaticResource TextInAnnouncementList}"
                            FontWeight="SemiBold" />
                        
                        <TextBlock
                            Grid.Column="1"
                            x:Name="NextReminderDate"
                            VerticalAlignment="Bottom"
                            TextWrapping="WrapWholeWords"
                            Style="{StaticResource TextInAnnouncementList}"
                            Visibility="{Binding IsExpired, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='inverse'}"
                            Text="{Binding NextDate, Converter={StaticResource ReminderDateTimeToStringConverter}}" />
                        
                        <TextBlock
                            Grid.Column="1"
                            x:Name="ReminderIsExpiredText"
                            x:Uid="ReminderIsExpiredText"
                            TextWrapping="WrapWholeWords"
                            Style="{StaticResource TextInAnnouncementList}"
                            Visibility="{Binding IsExpired, Converter={StaticResource BooleanToVisibilityConverter}}"
                            />
                    </Grid>
                </Grid>

                <Line 
                    Grid.Row="1"
                    Margin="-5, 5, 19, 5"
                    Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <!-- StatusBar -->
    <i:Interaction.Behaviors>
        <common:StatusBarBehavior IsVisible="True"
                                  ForegroundColor="White"
                                  BackgroundColor="Black"
                                  BackgroundOpacity="1.0" />
        <common:ProgressIndicatorBehavior IsVisible="{Binding IsProgressIndicatorVisible, UpdateSourceTrigger=PropertyChanged}"
                                          Value="{Binding ProgressIndicatorProgressValue, UpdateSourceTrigger=PropertyChanged}"
                                          Text="{Binding ProgressIndicatorText, UpdateSourceTrigger=PropertyChanged}"
                                          IsIndeterminate="{Binding IsIndeterminateProgressIndicator, UpdateSourceTrigger=PropertyChanged}" />
    </i:Interaction.Behaviors>

    <!-- CommandBar -->
    <Page.BottomAppBar>
        <CommandBar x:Name="ModeratorChannelDetailsCommandBar"
                    Background="{StaticResource UniUlmMainBackgroundColor}">
            <AppBarButton 
                x:Name="ModeratorChannelDetailsAddAnnounementButton"
                x:Uid="ModeratorChannelDetailsAddAnnounementButton"
                Label="add message"
                Icon="add"
                Visibility="{Binding ElementName=ModeratorChannelDetailsAddAnnounementButton, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding SwitchToAddAnnouncementDialogCommand}"/>
            <AppBarButton
                x:Name="ModeratorChannelDetailsEditChannelButton"
                x:Uid="ModeratorChannelDetailsEditChannelButton"
                Label="edit channel"
                Icon="Edit"
                Visibility="{Binding ElementName=ModeratorChannelDetailsEditChannelButton, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding SwitchToEditChannelDialogCommand}"/>
            <AppBarButton
                x:Name="ModeratorChannelDetailsAddReminderButton"
                x:Uid="ModeratorChannelDetailsAddReminderButton"
                Label="add reminder"
                Icon="Add"
                Visibility="{Binding ElementName=ModeratorChannelDetailsAddReminderButton, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding SwitchToAddReminderDialogCommand}"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titelbereich - Drawer -->
        <Grid Grid.Row="0" Style="{StaticResource DrawerMenuTitleBar}"
              Background="{Binding Channel, Converter={StaticResource ChannelToDrawerMenuBackgroundConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Drawer Icon -->
            <Image x:Name="DrawerIcon" 
					   Grid.Column="0"
					   Style="{StaticResource DrawerIconStyle}"
					   Tapped="DrawerIcon_Tapped" />

            <!-- Drawer Text -->
            <TextBlock Grid.Column="1"
						   x:Uid="ModeratorChannelDetailsTitle"
						   Style="{StaticResource DrawerTextStyle}"
						   Text="{Binding Channel.Name, TargetNullValue='ChannelDetails', FallbackValue='ChannelDetails'}" />
        </Grid>

        <!--Inhalt der Seite und Inhalt des Drawer Menü-->
        <drawerLayout:DrawerLayout Grid.Row="1" x:Name="DrawerLayout">

            <!-- Inhalt der Seite -->
            <Grid x:Name="MainFragment" Background="{StaticResource MainFragmentBackgroundColor}">
                <Pivot
                    x:Uid="ModeratorChannelDetailsPivot"
                    x:Name="ModeratorChannelDetailsPivot"
                    HeaderTemplate="{StaticResource PivotItemHeaderStyle}"
                    SelectedIndex="{Binding SelectedPivotItemIndex, Mode=TwoWay}">
                    
                    <!-- PivotItem 1: Announcements -->
                    <PivotItem
                        x:Name="ModeratorChannelDetailsAnnouncementPivotItem"
                        x:Uid="ModeratorChannelDetailsAnnouncementPivotItem"
                        Style="{StaticResource PivotItemStyle}"
                        Loaded="ModeratorChannelDetailsAnnouncementPivotItem_Loaded"
                        Header="Nachrichten">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Text, der angezeigt wird, wenn keine Nachrichten vorhanden sind. -->
                            <TextBlock
                                Grid.Row="0"
                                x:Name="NoMessagesInChannelInfo"
                                x:Uid="ChannelDetailsNoMessagesInChannelInfo"
                                Style="{StaticResource UniversityNewsUlmStandardText}" 
                                Visibility="{Binding Announcements.Count, Converter={StaticResource ListCountToVisibilityConverter}}">
                                    In diesem Kanal sind noch keine Nachrichten vorhanden.
                            </TextBlock>

                            <!-- Liste mit Announcements -->
                            <ListView
                                x:Name="AnnouncementList"
                                Grid.Row="1"
                                ItemTemplate="{StaticResource AnnouncementListItemStyle}"
                                ItemsSource="{Binding Announcements}"
                                HorizontalContentAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                RenderTransformOrigin="0.5, 0.5"
                                ScrollViewer.VerticalScrollBarVisibility="{Binding ShowScrollBar, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='ScrollBar'}">
                                <ListView.RenderTransform>
                                    <RotateTransform x:Name="AnnouncementListRotation" Angle="{Binding ListRotationAngle, UpdateSourceTrigger=PropertyChanged}"/>
                                </ListView.RenderTransform>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>

                        </Grid>

                    </PivotItem>
                    
                    <!-- PivotItem 2: Reminder -->
                    <PivotItem
                        x:Name="ModeratorChannelDetailsReminderPivotItem"
                        x:Uid="ModeratorChannelDetailsReminderPivotItem"
                        Style="{StaticResource PivotItemStyle}"
                        Loaded="ModeratorChannelDetailsReminderPivotItem_Loaded"
                        Header="Reminder">
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Text, der angezeigt wird, wenn keine Reminder vorhanden sind. -->
                            <TextBlock
                                Grid.Row="0"
                                x:Name="NoReminderInChannelInfo"
                                x:Uid="ChannelDetailsNoReminderInChannelInfo"
                                Style="{StaticResource UniversityNewsUlmStandardText}" 
                                Visibility="{Binding Reminders.Count, Converter={StaticResource ListCountToVisibilityConverter}}">
                                    In diesem Kanal sind noch keine Reminder vorhanden.
                            </TextBlock>

                            <!-- Liste mit Remindern -->
                            <ListView
                                x:Name="ReminderList"
                                Grid.Row="1"
                                ItemTemplate="{StaticResource ReminderListItemStyle}"
                                ItemsSource="{Binding Reminders}"
                                HorizontalContentAlignment="Stretch"
                                HorizontalAlignment="Stretch">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>
                    </PivotItem>
                    
                    <!-- Pivot Item 3: Kanalinformation -->
                    <PivotItem
                        x:Name="ModeratorChannelDetailsChannelInfoPivotItem"
                        x:Uid="ModeratorChannelDetailsChannelInfoPivotItem"
                        Style="{StaticResource PivotItemStyle}"
                        Header="Kanalinformation">

                        <ScrollViewer 
                            VerticalScrollBarVisibility="Auto">

                            <!-- Elemente mit Kanalinformationen einschließlich Subklasseninformationen. -->
                            <Grid
                            x:Name="GridWithChannelInformation"
                            Margin="0,0,19,0"
                            HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Grid mit Kanaldaten. -->
                                <Grid
                                    Grid.Row="0"
                                    x:Name="ChannelDataFields"
                                    DataContext="{Binding Channel, TargetNullValue={x:Null}}"
                                    HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Kanalname -->
                                    <Grid
                                        Grid.Row="0"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icon und Title für Kanalname. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/NameInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelNameField"
                                                x:Name="ChannelName"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Name"
                                                />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelNameContent"
                                            Style="{StaticResource TextInPropertyDescriptions}"
                                            Text="{Binding Name, TargetNullValue='', FallbackValue=''}" />

                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>

                                    <!-- Kanaltyp -->
                                    <Grid
                                        Grid.Row="1"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icon und Title für Kanaltyp. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/TypeInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelTypeField"
                                                x:Name="ChannelType"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Typ" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelTypeContent"
                                            Style="{StaticResource TextInPropertyDescriptions}"
                                            Text="{Binding Type, Converter={StaticResource ChannelTypeToStringConverterLocal}, TargetNullValue='', FallbackValue=''}" />
                                        <!--{Binding Type, TargetNullValue='', FallbackValue='', Converter={StaticResource ChannelTypeToStringConverterLocal}}-->

                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>

                                    <!-- Kanalbeschreibung -->
                                    <Grid
                                        x:Name="ChannelNameGrid"
                                        Grid.Row="2"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icon und Title für Kanalbeschreibung. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/DescriptionInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelDescriptionField"
                                                x:Name="ChannelDescription"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Beschreibung"/>
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelDescriptionContent"
                                            Style="{StaticResource TextInPropertyDescriptions}"
                                            Text="{Binding Description, TargetNullValue='', FallbackValue=''}" />
                                        <!--{Binding Description, TargetNullValue='', FallbackValue=''}-->

                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>

                                    <!-- Semester -->
                                    <Grid
                                        Grid.Row="3"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icon und Title für Semester. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/TermInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelTermField"
                                                x:Name="ChannelTerm"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Semester" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelTermContent"
                                            Style="{StaticResource TextInPropertyDescriptions}"
                                            Text="{Binding Term, TargetNullValue='', FallbackValue=''}" />
                                        <!--{Binding Term, TargetNullValue='', FallbackValue=''}-->

                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>

                                    <!-- Erstellungsdatum -->
                                    <Grid
                                        Grid.Row="4"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icon und Title für Erstellungsdatum. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/CreationDateInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelCreationDateField"
                                                x:Name="ChannelCreationDate"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Erstellungsdatum" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelCreationDateContent"
                                            Style="{StaticResource TextInPropertyDescriptions}"
                                            Text="{Binding CreationDate, TargetNullValue='', FallbackValue=''}" />
                                        <!--{Binding Channel.CreationDate, TargetNullValue='', FallbackValue=''}-->

                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>

                                    <!-- Änderungsdatum -->
                                    <Grid
                                        Grid.Row="5"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>


                                        <!-- Icon und Title für Änderungsdatum. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/ModificationDateInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelModificationDateField"
                                                x:Name="ChannelModificationDate"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Änderungsdatum" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelModificationDateContent"
                                            Style="{StaticResource TextInPropertyDescriptions}"
                                            Text="{Binding ModificationDate, TargetNullValue='', FallbackValue=''}" />
                                        <!--{Binding Channel.ModificationDate, TargetNullValue='', FallbackValue=''}-->

                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>

                                    <!-- Lokalitäten -->
                                    <Grid
                                        Grid.Row="6"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icon und Title für Lokalitäten. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/LocationsInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelLocationsField"
                                                x:Name="ChannelLocations"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Locations" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelLocationsContent"
                                            Style="{StaticResource TextInPropertyDescriptions}"
                                            Text="{Binding Locations, TargetNullValue='', FallbackValue=''}" />
                                        <!--{Binding Locations, TargetNullValue='', FallbackValue=''}-->

                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>

                                    <!-- Termine -->
                                    <Grid
                                        Grid.Row="7"
                                        Style="{StaticResource EnumerationOfPropertiesGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icon und Title für Termine. -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                   Source="/Assets/ResourceDetailsIcons/TimesInfo.png"
                                                   Style="{StaticResource EnumerationOfPropertiesIconStyle}"
                                                   />

                                            <TextBlock
                                                Grid.Column="1"
                                                x:Uid="ChannelDetailsChannelDatesField"
                                                x:Name="ChannelDates"
                                                Style="{StaticResource HeaderTextInPropertyDescriptions}"
                                                Text="Termine" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            x:Name="ChannelDatesContent"
