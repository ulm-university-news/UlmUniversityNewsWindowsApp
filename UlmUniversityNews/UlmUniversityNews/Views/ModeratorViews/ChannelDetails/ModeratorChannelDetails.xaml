                                        <Line Grid.Row="2"
                                              Style="{StaticResource EnumerationOfPropertiesSeperatorStyle}" />
                                    </Grid>
                                </Grid>
                                <!-- Ende Grid für Kanaldaten. -->

                                <!-- Grid mit Vorlesungsdaten. -->
                                <Grid
                                    Grid.Row="1"
                                    x:Name="LectureDataFields"
                                    DataContext="{Binding Lecture, TargetNullValue={x:Null}}"
